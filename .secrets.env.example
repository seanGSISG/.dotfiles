# Secrets Environment Variables
# Edit with: chezmoi edit ~/.secrets.env
# On new machine: chezmoi apply decrypts to ~/.secrets.env
# Used by: shell config (source ~/.secrets.env) and MCP server setup script

# MCP Server API Keys
export CONTEXT7_API_KEY="your-context7-api-key-here"  # pragma: allowlist secret
export ZREAD_API_KEY="your-zread-api-key-here"  # pragma: allowlist secret
export EXA_API_KEY="your-exa-api-key-here"
export GREPTILE_API_KEY="your-greptile-api-key-here"

# Lokka (Microsoft Graph Explorer)
export LOKKA_CLIENT_ID="your-azure-app-client-id-here"
export LOKKA_CLIENT_SECRET="your-azure-app-client-secret-here"  # pragma: allowlist secret
export LOKKA_TENANT_ID="your-azure-tenant-id-here"
